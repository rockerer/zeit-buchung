{
    "name": "tausendstel-licht/zeit-buchung",
    "description": "Console tool to record working time.",
    "type": "project",
    "license": "MIT",
    "require": {
        "symfony/console": "^4.3",
        "php": "^7.2",
        "ext-json": "*",
        "laminas/laminas-servicemanager": "^3.4",
        "laminas/laminas-config": "^3.3",
        "laminas/laminas-modulemanager": "^2.8"
    },
    "authors": [
        {
            "name": "Lukas-Hubert von Zukowski",
            "email": "tausendstel.licht@gmail.com"
        }
    ],
    "bin": [
        "bin/zeit-buchung.php"
    ],
    "autoload": {
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "ZeitBuchung\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "mikey179/vfsstream": "^1.6"
    },
    "scripts": {
        "test": "phpunit tests/",
        "phpcs": "phpcs --standard=PSR12 --extensions=php -n src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 --extensions=php -n src/ tests/"
    },
    "scripts-descriptions": {
        "test": "Execution of all php unit tests in project directory tests/.",
        "phpcs": "Runs codesniffer with PSR12 for all php files in src/ and tests/ without warnings.",
        "phpcbf": "Runs automatic codesniffer fixer with PSR12 for all php files in src/ and tests/ without warnings."
    }
}
